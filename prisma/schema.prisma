// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id @default(uuid())
  name      String
  imageUrl  String? // 新增图片URL字段
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Color {
  id         String      @id @default(uuid())
  name       String
  value      String // Hex code
  products   Product[] // Many-to-many relation with Product
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  cartItems  CartItem[] // 新增: 与购物车项的关系
  orderItems OrderItem[] // 新增: 与订单项的关系
}

model Size {
  id         String      @id @default(uuid())
  name       String
  value      String // e.g., "S", "M", "L", etc.
  products   Product[] // Many-to-many relation with Product
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  cartItems  CartItem[] // 新增: 与购物车项的关系
  orderItems OrderItem[] // 新增: 与订单项的关系
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String
  price       Float
  isFeatured  Boolean     @default(false)
  isArchived  Boolean     @default(false)
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  String
  colors      Color[] // Many-to-many relation with Color
  sizes       Size[] // Many-to-many relation with Size
  orderItems  OrderItem[]
  cartItems   CartItem[] // 新增: 与购物车项的关系
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  images      Image[]
}

model Order {
  id              String        @id @default(uuid())
  orderNumber     String        @unique
  user            User          @relation(fields: [userId], references: [id]) // 修改这里
  userId          String // 修改这里
  items           OrderItem[]
  status          OrderStatus   @default(PENDING)
  totalAmount     Float
  phone           String?
  shippingAddress String?
  paymentMethod   String?
  paymentIntent   String? // Stripe 支付意图或会话 ID
  paymentStatus   PaymentStatus @default(UNPAID)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model OrderItem {
  id        String   @id @default(uuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  price     Float // Price at time of order
  color     Color?   @relation(fields: [colorId], references: [id])
  colorId   String? // Optional reference to the selected color
  size      Size?    @relation(fields: [sizeId], references: [id])
  sizeId    String? // Optional reference to the selected size
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

// 新增: 购物车模型
model Cart {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
}

// 新增: 购物车项目模型
model CartItem {
  id        String   @id @default(uuid())
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Int      @default(1)
  color     Color?   @relation(fields: [colorId], references: [id])
  colorId   String? // 可选的颜色选择
  size      Size?    @relation(fields: [sizeId], references: [id])
  sizeId    String? // 可选的尺寸选择
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cartId])
  @@index([productId])
}

enum OrderStatus {
  PENDING // 待处理/未支付
  PAID // 已支付/处理中
  COMPLETED // 已完成
  CANCELLED // 已取消
}

enum PaymentStatus {
  UNPAID // 未支付
  PAID // 已支付
  REFUNDED // 已退款
  FAILED // 支付失败
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  orders        Order[] // 从Customer迁移
  carts         Cart[] // 新增: 与购物车的关系
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          String?
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?
  sessions      Session[]
  accounts      Account[]

  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime
  updatedAt      DateTime
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
